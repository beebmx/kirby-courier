/* Base */

body,
body *:not(html):not(style):not(br):not(tr):not(code) {
    box-sizing: border-box;
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Helvetica, Arial, sans-serif,
        'Apple Color Emoji', 'Segoe UI Emoji', 'Segoe UI Symbol';
    position: relative;
}

body {
    -webkit-text-size-adjust: none;
    background-color: #ffffff;
    color: #334155;
    height: 100%;
    line-height: 1.4;
    margin: 0;
    padding: 0;
    width: 100% !important;
}

p,
ul,
ol,
blockquote {
    line-height: 1.4;
    text-align: left;
}

a {
    color: #1e3a8a;
}

a img {
    border: none;
}

code {
    color: #334155;
    background-color: #f1f5f9;
    border-radius: 5px;
    padding: 2px 4px;
}

/* Typography */

h1 {
    color: #3d4852;
    font-size: 18px;
    font-weight: bold;
    margin-top: 0;
    text-align: left;
}

h2 {
    font-size: 16px;
    font-weight: bold;
    margin-top: 0;
    text-align: left;
}

h3 {
    font-size: 14px;
    font-weight: bold;
    margin-top: 0;
    text-align: left;
}

p {
    font-size: 16px;
    line-height: 1.5em;
    margin-top: 0;
    text-align: left;
}

p.sub {
    font-size: 12px;
}

img {
    max-width: 100%;
}

/* Layout */

.wrapper {
    -premailer-cellpadding: 0;
    -premailer-cellspacing: 0;
    -premailer-width: 100%;
    background-color: #f8fafc;
    margin: 0;
    padding: 0;
    width: 100%;
}

.content {
    -premailer-cellpadding: 0;
    -premailer-cellspacing: 0;
    -premailer-width: 100%;
    margin: 0;
    padding: 0;
    width: 100%;
}

/* Header */

.header {
    padding: 25px 0;
    text-align: center;
}

.header a {
    color: #3d4852;
    font-size: 19px;
    font-weight: bold;
    text-decoration: none;
}

/* Logo */

.logo {
    height: 90px;
    max-height: 90px;
}

/* Body */

.body {
    -premailer-cellpadding: 0;
    -premailer-cellspacing: 0;
    -premailer-width: 100%;
    background-color: #f8fafc;
    border-bottom: 1px solid #f8fafc;
    border-top: 1px solid #f8fafc;
    margin: 0;
    padding: 0;
    width: 100%;
}

.inner-body {
    -premailer-cellpadding: 0;
    -premailer-cellspacing: 0;
    -premailer-width: 620px;
    background-color: #ffffff;
    border-color: #e8e5ef;
    border-radius: 6px;
    border-width: 1px;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -2px rgba(0, 0, 0, 0.1);
    margin: 0 auto;
    padding: 0;
    width: 620px;
}

/* Subcopy */

.subcopy {
    border-top: 1px solid #e2e8f0;
    margin-top: 25px;
    padding-top: 25px;
}

.subcopy p {
    font-size: 12px;
    text-align: center;
}

/* Footer */

.footer {
    -premailer-cellpadding: 0;
    -premailer-cellspacing: 0;
    -premailer-width: 620px;
    margin: 0 auto;
    padding: 0;
    text-align: center;
    width: 620px;
}

.footer p {
    color: #64748b;
    font-size: 12px;
    text-align: center;
}

.footer a {
    color: #64748b;
    text-decoration: underline;
}

/* Tables */

.table table {
    -premailer-cellpadding: 0;
    -premailer-cellspacing: 0;
    -premailer-width: 100%;
    margin: 30px auto;
    width: 100%;
    border-spacing: 0px;
    border-collapse: collapse;
}

.table th {
    color: #334155;
    border-bottom: 1px solid #e2e8f0;
    margin: 0;
    padding-bottom: 8px;
}

.table td {
    color: #64748b;
    font-size: 15px;
    line-height: 18px;
    margin: 0;
    padding: 7px 1px;
}

.content-cell {
    max-width: 100vw;
    padding: 32px;
}

/* Buttons */

.action {
    -premailer-cellpadding: 0;
    -premailer-cellspacing: 0;
    -premailer-width: 100%;
    margin: 30px auto;
    padding: 0;
    text-align: center;
    width: 100%;
}

.button {
    -webkit-text-size-adjust: none;
    border-radius: 5px;
    color: #fff;
    display: inline-block;
    overflow: hidden;
    text-decoration: none;
}

.button-blue,
.button-primary {
    background-color: #1e3a8a;
    border-bottom: 8px solid #1e3a8a;
    border-left: 18px solid #1e3a8a;
    border-right: 18px solid #1e3a8a;
    border-top: 8px solid #1e3a8a;
}

.button-green,
.button-success {
    background-color: #10b981;
    border-bottom: 8px solid #10b981;
    border-left: 18px solid #10b981;
    border-right: 18px solid #10b981;
    border-top: 8px solid #10b981;
}

.button-red,
.button-error {
    background-color: #dc2626;
    border-bottom: 8px solid #dc2626;
    border-left: 18px solid #dc2626;
    border-right: 18px solid #dc2626;
    border-top: 8px solid #dc2626;
}

/* Panels */

.panel {
    border-left: #1e3a8a solid 4px;
    border-radius: 2px 0px 0px 2px;
    margin: 21px 0;
}

.panel-content {
    background-color: #f8fafc;
    color: #475569;
    padding: 12px 16px;
  border-radius: 0px 2px 2px 0px;
}

.panel-content p {
    color: #475569;
}

.panel-content code {
    background-color: #f8fafc;
    border-radius: 0px;
    padding: 0px;
}

.panel-item {
    padding: 0;
}

.panel-item p:last-of-type {
    margin-bottom: 0;
    padding-bottom: 0;
}

/* Utilities */

.break-all {
    word-break: break-all;
}
