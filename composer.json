{
    "name": "beebmx/kirby-courier",
    "description": "Kirby Courier offers a convenient and painless solution for creating emails tailored for your Kirby website.",
    "license": "MIT",
    "type": "kirby-plugin",
    "version": "1.0.5",
    "keywords": [
        "mail",
        "email",
        "courier",
        "kirby",
        "kirby-plugin",
        "kirby3",
        "kirby4",
        "kirby5"
    ],
    "authors": [
        {
            "name": "Fernando Gutierrez",
            "homepage": "https://beeb.mx"
        }
    ],
	"require": {
        "php": "^8.2",
		"getkirby/composer-installer": "^1.2",
        "tijsverkoyen/css-to-inline-styles": "^2.0"
	},
	"require-dev": {
		"laravel/pint": "^1.0",
		"pestphp/pest": "^3.0",
        "getkirby/cli": "^1.6",
        "getkirby/cms": "^4.5 || ^5.0",
        "spatie/ray": "^1.40"
	},
	"config": {
		"allow-plugins": {
			"getkirby/composer-installer": true,
			"pestphp/pest-plugin": true
		}
	},
    "autoload": {
        "files": [
            "helpers.php"
        ],
        "psr-4": {
            "Beebmx\\KirbyCourier\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "extra": {
        "kirby-plugin-path": "tests/Fixtures/site/plugins"
    },
    "scripts": {
        "test": "vendor/bin/pest"
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
